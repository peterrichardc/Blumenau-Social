<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteLight"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/blumenau_pic"/>

    <TextView
        android:id="@+id/tvVolunteerssss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorBlueDark"
        android:text="Nas próximas telas vamos te ajudar a criar um perfil para indicar as instituições que mais tem a ver com você"
        android:textSize="14sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGreenLight"
        android:gravity="center_horizontal"
        android:textSize="22sp"
        android:padding="30sp"
        android:textStyle="bold"
        android:text="Primeiro nos diga seu nome"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="Digite seu nome aqui..."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Prosseguir"
        android:textColor="@android:color/black"
        android:gravity="center" />






</LinearLayout>