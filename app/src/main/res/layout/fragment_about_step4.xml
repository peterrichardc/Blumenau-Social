<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteLight"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="30sp"
        android:text="@string/speakWithUs"
        android:textColor="@color/colorGreenLight"
        android:textSize="28sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/btnSendMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/colorGreenApp"
        android:text="@string/send_mail"
        android:textColor="@android:color/white"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />

    <include layout="@layout/layout_social_medias" />

    <include layout="@layout/layout_developers" />


</LinearLayout>